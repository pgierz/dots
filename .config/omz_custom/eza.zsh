# Global aliases for ls, which is replaced by the colorful eza
alias eza='eza --icons --git --header'  # Always use icons, git, and the header
alias ls='eza'
alias laa='eza -aa'
alias laal='eza -aal'
alias ll='eza -l'
alias lll='eza -l | less'
alias lla='eza -la'
alias llt='eza -T'
alias llfu='eza -bghlSF@'
